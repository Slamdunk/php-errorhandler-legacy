{
    "name": "slam/php-errorhandler-legacy",
    "description": "Crappy class to manage errors and exceptions",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.0.0 || ~8.1.0"
    },
    "require-dev": {
        "malukenho/mcbumpface": "^1.1.5",
        "phpstan/phpstan": "^1.5.3",
        "phpstan/phpstan-phpunit": "^1.1.0",
        "phpstan/phpstan-strict-rules": "^1.1.0",
        "phpunit/phpunit": "^9.5.19",
        "slam/php-cs-fixer-extensions": "^3.1.0",
        "slam/php-debug-r": "^1.7.0",
        "symfony/console": "^6.0.5"
    },
    "autoload": {
        "psr-4": {
            "Slam\\ErrorHandler\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlamTest\\ErrorHandler\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "malukenho/mcbumpface": true
        }
    },
    "extra": {
        "mc-bumpface": {
            "stripVersionPrefixes": true
        }
    }
}
